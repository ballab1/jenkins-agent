
env:
    BASE_TAG: '3283.v92c105e0f819-8-alpine-jdk21'
    CBF_VERSION: 'v3.9.10'
    CONTAINER_GIT_URL: 'https://nas.home:5001/GIT/jenkins-agent'
    CONTAINER_OS: 'alpine'
    CONTAINER_NAME: 'jenkins/inbound-agent'
    #DEBUG_TRACE: '0'
    DEV_TEAM: 'alpine'
    DOCKER_LOG_DIR: '/var/log'
    DOCKER_REGISTRY: 's2.ubuntu.home:5000/'
    OS_VERSION: '3.21.3'
    PIP_VERSION: '24.3.1'
    PYTHON_VERSION: '3.13.2'
    WORK_DIR: '/usr/local/utilities'
    HOST_IPS: "$(hostname -i)"
    USER_ID: "$(getent passwd $UID|awk '{split($0, arr, \":\"); print arr[3] \":\" arr[4]}')"
    FROM_BASE: "${DOCKER_REGISTRY}docker.io/${CONTAINER_NAME:?}:${BASE_TAG}"
    TARGET: "${DOCKER_REGISTRY}${DEV_TEAM}/${CONTAINER_NAME:?}/${BASE_TAG}:${CONTAINER_TAG:-latest}"


